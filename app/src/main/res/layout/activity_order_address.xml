<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.morly.driver.widget.AppNavigationBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:left_title="返回"
            app:title="创建订单" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="@dimen/dimen_gap_big"
            android:layout_marginRight="@dimen/dimen_gap_big"
            android:layout_marginTop="@dimen/dimen_gap_huge"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/dimen_gap_small"
                android:text="起点:"
                android:textSize="@dimen/dimen_text_medium" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bg_white"
                android:cursorVisible="false"
                android:gravity="center"
                android:hint="点击输入"
                android:textSize="@dimen/dimen_text_medium" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_margin="@dimen/dimen_gap_big"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/dimen_gap_small"
                android:text="终点:"
                android:textSize="@dimen/dimen_text_medium" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bg_white"
                android:cursorVisible="false"
                android:gravity="center"
                android:hint="点击输入"
                android:textSize="@dimen/dimen_text_medium" />

        </LinearLayout>

    </LinearLayout>


    <TextView
        android:id="@+id/tv_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/dimen_gap_medium"
        android:background="@drawable/btn_form_bg"
        android:gravity="center"
        android:padding="10dp"
        android:text="下一步"
        android:textColor="@color/text_black"
        android:textSize="@dimen/dimen_gap_big" />

</RelativeLayout>