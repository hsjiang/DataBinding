<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.morly.driver.widget.AppNavigationBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:left_title="返回"
        app:title="创建订单" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="苏州乐园 —— 苏州火车站南广场" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="@dimen/dimen_gap_huge"
        android:layout_marginRight="@dimen/dimen_gap_huge"
        android:layout_marginTop="@dimen/dimen_gap_huge"
        android:background="@color/bg_white"
        android:gravity="center"
        android:hint="输入客户手机号码"
        android:textSize="@dimen/dimen_text_usual" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="@dimen/dimen_gap_huge"
        android:layout_marginRight="@dimen/dimen_gap_huge"
        android:layout_marginTop="20dp"
        android:background="@color/bg_white"
        android:gravity="center"
        android:text="选择计费模式"
        android:textColor="#777" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_gap_huge"
        android:orientation="horizontal">

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/sw_insurance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/dimen_gap_big"
            android:typeface="normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_gap_big"
            android:layout_toRightOf="@id/sw_insurance"
            android:text="保险" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_create_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_gap_huge"
        android:layout_marginRight="@dimen/dimen_gap_huge"
        android:layout_marginTop="@dimen/dimen_gap_huge"
        android:background="@drawable/btn_form_bg"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:text="生成订单"
        android:textColor="@color/text_black"
        android:textSize="@dimen/dimen_gap_big" />

</LinearLayout>