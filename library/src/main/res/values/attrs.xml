<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="BaseRecyclerView_style">
        <attr name="layoutMode" format="enum">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
            <enum name="invalid_offset" value="2" />
            <enum name="grid" value="3" />
        </attr>
        <attr name="columnCount" format="integer" />
        <attr name="rowDivider" format="boolean" />
        <attr name="spanDivider" format="boolean" />
        <attr name="dividerWidth" format="dimension" />
        <attr name="dividerHeight" format="dimension" />
        <attr name="dividerMarginLeft" format="dimension" />
        <attr name="dividerMarginRight" format="dimension" />
        <attr name="dividerMarginTop" format="dimension" />
        <attr name="dividerMarginBottom" format="dimension" />
        <attr name="dividerColor" format="color" />
        <attr name="inner" format="boolean" />
    </declare-styleable>
</resources>